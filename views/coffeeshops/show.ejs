<% layout("layouts/boilerplate") -%>

<h1><%= coffeeshop.name %></h1>
<h2><%= coffeeshop.location %></h2>
<p><%= coffeeshop.description %></p>
<img style="width: 25%" src="<%=coffeeshop.images%>" alt="" />
