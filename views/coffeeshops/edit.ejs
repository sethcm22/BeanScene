<% layout("layouts/boilerplate") -%>
<h1>Edit a Coffeeshop!</h1>

<form
  action="/coffeeshops/<%=coffeeshop._id %>?_method=PUT"
  method="POST"
  class="row g-3 needs-validation"
  enctype="multipart/form-data"
  novalidate
>
  <div class="col-md-6">
    <label for="name" class="form-label">Name</label>
    <input
    required
      type="text"
      class="form-control"
      id="name"
      name="coffeeshop[name]"
      placeholder="Name"
      value="<%=coffeeshop.name %>"
    />
  </div>
  <div class="col-md-6">
    <label for="location" class="form-label">Location</label>
    <input
    required
      type="text"
      class="form-control"
      id="location"
      name="coffeeshop[location]"
      placeholder="Location"
      value="<%=coffeeshop.location %>"
    />
  </div>
  <div class="col-12">
    <label class="form-label" for="description">Description</label>
    <textarea
    required
      class="form-control"
      name="coffeeshop[description]"
      id="description"
      cols="50"
      rows="5"
    >
<%=coffeeshop.description %></textarea
    >
  </div>
  <div class="col-12">
    <% for(let p of prices) {%>
      <label for="<%=p%>"><%=p%></label>
      <input type="radio" id="<%=p%>" <%=coffeeshop.price === p ? "checked": ""%> name="coffeeshop[price]" value="<%=p%>">

<% } %>
<div class="col-12">
  <label for="image" class="form-label">Images</label>
  <input type="file" class="form-control" name="image" id="image" multiple />
</div>
<div class="col-12">

  <div class="col-12">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
